<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:listDivider">@color/gray</item>
        <item name="isLightTheme">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="YourStyleNameFor.NavigationDrawer" parent="ThemeOverlay.AppCompat.Light">
        <!-- Color of text and icon when SELECTED -->
        <!--<item name="android:textColor">#DF0D0D</item>-->
        <!-- Background color when SELECTED -->
        <!--<item name="android:icon">@color/black</item>-->

        <item name="colorControlHighlight">@color/red</item>


    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/darker_gray</item>
    </style>

    <style name="DrawerInformationTheme" parent="AppTheme">
        <item name="android:textColor">#B9B9BD</item>
        <item name="color">@android:color/darker_gray</item>
    </style>

</resources>